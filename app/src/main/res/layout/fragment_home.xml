<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.zephyrs.android.onefriend.BottomBar">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingTop="10dp">

            <Button
                android:id="@+id/back_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@mipmap/back_arrow"
                android:fontFamily="monospace"
                android:textAllCaps="false"
                android:textSize="15dp"
                android:textStyle="normal" />

            <Button
                android:id="@+id/reselect"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="27dp"
                android:layout_marginStart="27dp"
                android:background="#00000000"
                android:gravity="center"
                android:text="Measure Stress"
                android:textAllCaps="false"
                android:textColor="@color/buttonColor"
                android:textSize="15dp" />


            <Button
                android:id="@+id/done"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:background="#00000000"
                android:gravity="center"
                android:text="Done"
                android:textAllCaps="false"
                android:textColor="@color/buttonColor"
                android:textSize="15dp" />

        </RelativeLayout>
    </LinearLayout>

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:weightSum="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_weight="2.34"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingTop="10dp">

            <Button
                android:id="@+id/buttonquestion"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/info"
                android:fontFamily="monospace"
                android:gravity="center"
                android:paddingTop="15dp"
                android:textAllCaps="false"
                android:textSize="15dp"
                android:layout_below="@+id/textView4"
                android:layout_alignRight="@+id/head"
                android:layout_alignEnd="@+id/head" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MY STRESS"
                android:textSize="23dp"
                android:layout_above="@+id/head"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="16dp" />

            <ImageButton
                android:id="@+id/head"
                android:layout_width="170dp"
                android:layout_height="180dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="#00000000"
                android:scaleType="fitCenter"
                android:src="@drawable/h7"
                android:text="" />
        </RelativeLayout>


        <!--<LinearLayout-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content">-->

            <!--<TextView-->
                <!--android:id="@+id/textView4"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:textSize="40dp"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="Activities" />-->
        <!--</LinearLayout>-->




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:orientation="horizontal"
            >
        <TextView
            android:id="@+id/sleep"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Sleep"
            android:textColor="#666666"
            android:textSize="15dp"
            android:layout_marginLeft="50dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/sleep_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="0 Hour"
                android:gravity="right|bottom"
                android:layout_weight="1"
                android:textColor="#666666"
                android:textSize="10dp"
                android:layout_marginRight="50dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <Button
                    android:id="@+id/sleep_sign"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@mipmap/alarm" />

                <SeekBar
                android:id="@+id/sb_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="10"
                android:progress="0"
                android:progressDrawable="@drawable/stress_head_color"
                android:splitTrack="false"
                    android:layout_weight="1"
                android:thumb="@drawable/thumb_bar" />

            <Button
                android:id="@+id/hint1"
                android:layout_width="30dp"
                android:layout_height="30dp"

                android:background="@drawable/info" />
            </LinearLayout>
        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/exercise"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="50dp"
                android:text="Exercise"
                android:textColor="#666666"
                android:textSize="15dp"
                android:layout_marginStart="50dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/exercise_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="0 Minute"
                android:gravity="right|bottom"
                android:textColor="#666666"
                android:layout_marginRight="50dp"
                android:textSize="10dp"
                android:layout_weight="1"
                android:layout_marginEnd="51dp"
                android:layout_alignBaseline="@+id/exercise"
                android:layout_alignBottom="@+id/exercise"
                android:layout_alignParentEnd="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <Button
                android:id="@+id/exercise_sign"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@mipmap/exercise" />
            <SeekBar
                android:id="@+id/sb_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="60"
                android:progress="0"
                android:layout_weight="1"
                android:progressDrawable="@drawable/stress_head_color"
                android:splitTrack="false"
                android:thumb="@drawable/thumb_bar" />

            <Button
                android:id="@+id/hint2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/info" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/meditation"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="50dp"
                android:text="Meditation"
                android:textColor="#666666"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/meditation_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="50dp"
                android:text="0 Minute"
                android:gravity="right|bottom"
                android:layout_weight="1"
                android:textColor="#666666"
                android:textSize="10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/meditation_sign"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@mipmap/meditatioin" />

            <SeekBar
                android:id="@+id/sb_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="15"
                android:progress="0"
                android:layout_weight="1"
                android:progressDrawable="@drawable/stress_head_color"
                android:splitTrack="false"
                android:thumb="@drawable/thumb_bar" />

            <Button
                android:id="@+id/hint3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/info" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/social"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="50dp"
                android:text="Socializing"
                android:textColor="#666666"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/social_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="50dp"
                android:text="0 Minute"
                android:gravity="right|bottom"
                android:layout_weight="1"
                android:textColor="#666666"
                android:textSize="10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/social_sign"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@mipmap/social" />
            <SeekBar
                android:id="@+id/sb_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="90"
                android:progress="0"
                android:layout_weight="1"
                android:progressDrawable="@drawable/stress_head_color"
                android:splitTrack="false"
                android:thumb="@drawable/thumb_bar" />

            <Button
                android:id="@+id/hint4"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/info" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/water"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Water"
                android:layout_marginLeft="50dp"
                android:textColor="#666666"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/water_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="50dp"
                android:text="0 Glass"
                android:gravity="right|bottom"
                android:layout_weight="1"
                android:textColor="#666666"
                android:textSize="10dp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/water_sign"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@mipmap/water" />
            <SeekBar
                android:id="@+id/sb_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="10"
                android:progress="0"
                android:layout_weight="1"
                android:progressDrawable="@drawable/stress_head_color"
                android:splitTrack="false"
                android:thumb="@drawable/thumb_bar" />

            <Button
                android:id="@+id/hint5"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/info" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/hobby"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="50dp"
                android:text="Hobbies"
                android:textColor="#666666"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/hobby_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
               android:layout_marginRight="50dp"
                android:text="0 Minute"
                android:gravity="right|bottom"
                android:layout_weight="1"
                android:textColor="#666666"
                android:textSize="10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/hobby_sign"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@mipmap/hobby" />
            <SeekBar
                android:id="@+id/sb_6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="70"
                android:progress="0"
                android:layout_weight="1"
                android:progressDrawable="@drawable/stress_head_color"
                android:splitTrack="false"
                android:thumb="@drawable/thumb_bar" />

            <Button
                android:id="@+id/hint6"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/info" />
        </LinearLayout>

        <TextView
            android:id="@+id/bank"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            />
    </LinearLayout>
        </RelativeLayout>
</ScrollView>
    </LinearLayout>
</FrameLayout>
