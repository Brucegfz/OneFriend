<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:backgroundTint="#17202A"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:id="@+id/relativeLayout">

            <Button
                android:id="@+id/back_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@mipmap/close"
                android:backgroundTint="@color/white"
                android:fontFamily="monospace"
                android:textAllCaps="false"
                android:textSize="15dp"
                android:textStyle="normal" />

        </RelativeLayout>

    </LinearLayout>



    <ScrollView
        android:layout_width="match_parent"
        android:id="@+id/scroll"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"


                >

                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="30dp"
                    android:gravity="center"
                    android:text="QUICK FIXES"
                    />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/f1"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@drawable/f1"
                    android:gravity="left|center"
                    android:paddingLeft="20dp"
                    android:text="Create a routine"
                    android:textColor="@color/white"
                    android:textSize="23dp"
                    android:paddingTop="40dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:id="@+id/f2"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@drawable/f2"
                    android:gravity="left|center"
                    android:paddingLeft="20dp"
                    android:text="Keep an eye on physical health"
                    android:textColor="@color/white"
                    android:layout_marginTop="2dp"
                    android:textSize="23dp"
                    android:paddingTop="40dp"
                    android:layout_below="@+id/cause1"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:id="@+id/f3"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@drawable/f3"
                    android:gravity="left|center"
                    android:paddingLeft="20dp"
                    android:text="Start building social networks"
                    android:textColor="@color/white"
                    android:layout_marginTop="2dp"
                    android:textSize="23dp"
                    android:paddingTop="40dp"
                    android:layout_below="@+id/cause1"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />


                <TextView
                    android:id="@+id/f4"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@drawable/f4"
                    android:gravity="left|center"
                    android:paddingLeft="20dp"
                    android:text="Watch your alcohol intake"
                    android:textColor="@color/white"
                    android:layout_marginTop="2dp"
                    android:textSize="23dp"
                    android:paddingTop="40dp"
                    android:layout_below="@+id/cause3"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:id="@+id/f5"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@drawable/f5"
                    android:gravity="left|center"
                    android:paddingLeft="20dp"
                    android:text="Talk to someone"
                    android:textColor="@color/white"
                    android:layout_marginTop="2dp"
                    android:textSize="23dp"
                    android:paddingTop="40dp"
                    android:layout_alignTop="@+id/textView22"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />
            </LinearLayout>
            </LinearLayout>
    </ScrollView>
</LinearLayout>